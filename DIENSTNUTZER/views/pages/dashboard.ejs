<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <div class="container-fluid panel panel-default dashboard-container">
            <div class="row">
                <div class="col-sm-7">
                    <h3>Neustes Video:</h3>
                    <div class="panel panel-default video latest-video">
                        <div class="panel-heading">
                            <a href="/video/<%= videoList[0].id%>">
                                <%= videoList[0].title%>
                            </a>
                        </div>
                        <div class="panel-body container-fluid">
                            <iframe class="" id="youtubeIframe" width="560" height="315" src="https://www.youtube.com/embed/<%= videoList[0].youtubeId%>" frameborder="0" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <h3>Beliebte Tags:</h3>
                    <div id="tag-cloud">
                        <% for (tag in tagData){%>
                            <span data-weight="<%=tagData[tag] * 20 %>"><a href="search/<%=tag %>"> <%=tag %> </a></span>
                        <% }%>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <% for(var i=1; i<videoList.length; i++) {%>
                        <div class="panel panel-default video">
                            <div class="panel-heading">
                                <a href="/video/<%= videoList[i].id%>">
                                    <%= videoList[i].title%>
                                </a>
                            </div>
                            <div class="panel-body container-fluid">
                                <div class="row">
                                    <div class="col-sm-9">
                                        <%= videoList[i].description%>
                                    </div>
                                    <div class="col-sm-3">
                                        <select multiple class="video-tags" disabled="disabled">
                                            <% for(var j=0; j<videoList[i].tags.length; j++) {%>
                                                <option value="<%= videoList[i].tags[j] %>"><%= videoList[i].tags[j] %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>
    <script>
        $(document).ready(function(){
           initTagFieldsOnPage();
           loadTagCloud();
        });
    </script>

</body>

</html>